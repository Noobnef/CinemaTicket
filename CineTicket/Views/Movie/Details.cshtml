@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model CineTicket.Models.Movie
@{
    ViewData["Title"] = Model.Title;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<link href="~/css/darkmode.css" rel="stylesheet" />
<link href="~/css/lightmode.css" rel="stylesheet" />

<!-- Hero Banner Section -->
<div class="movie-hero position-relative mb-5">
    <div class="movie-backdrop" style="background-image: url('@Model.PosterUrl'); filter: blur(8px); opacity: 0.3; position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-size: cover; background-position: center; z-index: -1;"></div>
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="poster-container position-relative">
                    <div class="poster-wrapper border rounded-3 shadow overflow-hidden transform-hover">
                        <img src="@Model.PosterUrl" alt="@Model.Title Poster" class="img-fluid">
                        <div class="poster-overlay d-flex align-items-center justify-content-center">
                            
                        </div>
                    </div>
                    <div class="rating-badge position-absolute top-0 end-0 m-3 p-2 bg-danger text-white rounded-circle">
                        <span class="fw-bold">8.5</span>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <h1 class="display-4 fw-bold mb-3">@Model.Title</h1>
                <div class="d-flex flex-wrap gap-3 mb-4">
                    <span class="badge bg-primary rounded-pill px-3 py-2 fs-6">@Model.Genre</span>
                    <span class="badge bg-secondary rounded-pill px-3 py-2 fs-6">
                        <i class="bi bi-calendar-date me-1"></i> @Model.ReleaseDate.ToString("yyyy")
                    </span>
                    <span class="badge bg-info rounded-pill px-3 py-2 fs-6">
                        <i class="bi bi-clock me-1"></i> 120 min
                    </span>
                </div>
                <p class="lead mb-4">@Model.Description</p>
                <div class="d-flex gap-3 mt-4">
                    <a href="@Url.Action("Index", "Booking", new { movieId = Model.Id })"
                       class="btn btn-danger btn-lg rounded-pill px-4">
                        <i class="bi bi-ticket-detailed me-2"></i>@Localizer["BookNow"]
                    </a>
                    <a href="@Url.Action("Index", "Movie")"
                       class="btn btn-outline-light btn-lg rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i>@Localizer["Back"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/movie.js"></script>