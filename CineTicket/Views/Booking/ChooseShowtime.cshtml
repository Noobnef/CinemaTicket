@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model ChooseShowtimeViewModel
@{
    ViewData["Title"] = "Chọn suất chiếu cho " + Model.MovieTitle;
}

<!-- Giao diện dark/light nếu cần -->
<link href="~/css/darkmode.css" rel="stylesheet" />
<link href="~/css/lightmode.css" rel="stylesheet" />

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">🎬 @Localizer["Title"]: @Model.MovieTitle</h4>
        </div>
        <div class="card-body">
            @if (Model.Showtimes != null && Model.Showtimes.Any())
            {
                <div class="list-group">
                    @foreach (var s in Model.Showtimes)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-clock me-2"></i>
                                @s.StartTime.ToString("dd/MM/yyyy HH:mm")
                            </div>
                            <a asp-controller="Booking"
                               asp-action="Index"
                               asp-route-movieId="@Model.MovieId"
                               asp-route-showtimeId="@s.Id"
                               class="btn btn-sm btn-danger">
                                <i class="bi bi-ticket-detailed me-1"></i> @Localizer["Book"]
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">@Localizer["NoShowtime"]</p>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
<script src="~/js/movie.js"></script>
