@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model ChooseShowtimeViewModel
@{
    ViewData["Title"] = "Chọn suất chiếu cho " + Model.MovieTitle;
}

<link href="~/css/darkmode.css" rel="stylesheet" />
<link href="~/css/lightmode.css" rel="stylesheet" />

<div class="container my-5">
    <div class="card shadow border-0">
        <div class="card-header bg-pink text-white">
            <h4 class="mb-0"><i class="bi bi-film me-2"></i> @Localizer["Title"]: @Model.MovieTitle</h4>
        </div>
        <div class="card-body">
            @if (Model.Showtimes != null && Model.Showtimes.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var s in Model.Showtimes)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 border-bottom">
                            <div>
                                <i class="bi bi-clock me-2 text-pink"></i>
                                @s.StartTime.ToString("dd/MM/yyyy HH:mm")
                            </div>
                            <a asp-controller="Booking"
                               asp-action="Index"
                               asp-route-movieId="@Model.MovieId"
                               asp-route-showtimeId="@s.Id"
                               class="btn btn-sm btn-pink shadow-sm">
                                <i class="bi bi-ticket-detailed me-1"></i> @Localizer["Book"]
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">@Localizer["NoShowtime"]</p>
            }
        </div>
    </div>
</div>

<!-- Bi icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />

<!-- Custom style -->
<style>
    .bg-pink {
        background-color: #ff4081 !important;
    }

    .text-pink {
        color: #ff4081 !important;
    }

    .btn-pink {
        background-color: #ff4081;
        color: white;
        border: none;
    }

        .btn-pink:hover {
            background-color: #e03570;
            color: white;
        }

    .list-group-item {
        transition: background-color 0.2s ease;
    }

        .list-group-item:hover {
            background-color: #fff0f6;
        }
</style>
