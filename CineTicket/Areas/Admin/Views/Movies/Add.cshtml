@model CineTicket.Models.Movie
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/css/admin.css" rel="stylesheet" />
<h2>Thêm phim mới</h2>

<form asp-area="Admin" asp-controller="Movies" asp-action="Add" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label fw-bold"></label>
        <input asp-for="Title" class="form-control rounded-pill" placeholder="Tên Phim" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-bold"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Mô tả nội dung phim"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Genre" class="form-label fw-bold"></label>
        <input asp-for="Genre" class="form-control rounded-pill" placeholder="Thể loại" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReleaseDate" class="form-label fw-bold"></label>
        <input asp-for="ReleaseDate" type="date" class="form-control rounded-pill" />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Duration" class="form-label fw-bold"></label>
        <input asp-for="Duration" type="number" class="form-control rounded-pill" placeholder="Thời lượng (phút)" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PosterUrl" class="form-label fw-bold"></label>
        <input asp-for="PosterUrl" class="form-control rounded-pill" placeholder="Link ảnh poster" />
    </div>

    <div class="mb-3">
        <label asp-for="BannerUrl" class="form-label fw-bold"></label>
        <input asp-for="BannerUrl" class="form-control rounded-pill" placeholder="Link ảnh banner (nếu có)" />
    </div>

    <button type="submit" class="btn btn-success">Thêm phim</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
