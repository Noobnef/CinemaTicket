@model IEnumerable<CineTicket.Models.Snack>
@{
    ViewData["Title"] = "Quản lý bắp nước";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách bắp nước</h2>
<a asp-action="Add" class="btn btn-success mb-3">+ Thêm combo</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên combo</th>
            <th>Giá (VND)</th>
            <th>Mô tả</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0")</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
