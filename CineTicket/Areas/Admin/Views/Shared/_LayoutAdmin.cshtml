<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Admin Panel - CineTicket</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Custom Admin CSS -->
    <link href="@Url.Content("~/css/admin.css")" rel="stylesheet" />
    
    <!-- jQuery + Validation -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <nav class="sidebar">
        <div class="sidebar-header">
            <div class="logo">CineTicket</div>
            <div class="subtitle">Hệ thống quản trị</div>
        </div>
        <ul>
            <li>
                <a asp-area="" asp-controller="Movie" asp-action="Index">
                    <i class="fas fa-home"></i>
                    <span>Về Web phim</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index">
                    <i class="fas fa-users"></i>
                    <span>Quản lý Tài Khoản</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Movies" asp-action="Index">
                    <i class="fas fa-film"></i>
                    <span>Quản lý Phim</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Showtimes" asp-action="Index">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Quản lý Lịch Chiếu</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Tickets" asp-action="Index">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Quản lý Vé</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Room" asp-action="Index">
                    <i class="fas fa-door-open"></i>
                    <span>Quản lý Phòng chiếu</span>
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Snacks" asp-action="Index">
                    <i class="fs-4 me-2">🍿</i>

                    <span>Quản lý Bắp nước</span>
                </a>
            </li>
            <li>
				<a asp-area="Admin" asp-controller="Statistics" asp-action="Index">
                    <span>📈 Thống kê doanh thu</span>
                </a>
            </li>
            



        </ul>
        <div class="sidebar-footer">
            <span>CineTicket Admin</span>
            <span></span>
        </div>
    </nav>
    <main class="content">
        @RenderBody()
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom admin script -->
    <script>
        $(document).ready(function() {
            var path = window.location.pathname;

            $(".sidebar ul li a").each(function() {
                if (this.getAttribute('href') && path.includes(this.getAttribute('href'))) {
                    $(this).addClass('active');
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>