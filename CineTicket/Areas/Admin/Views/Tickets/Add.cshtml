@model CineTicket.Models.Ticket
@{
    ViewData["Title"] = "Thêm vé";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Add" method="post">
    <div class="row g-3">

        <div class="col-md-6">
            <label asp-for="ShowtimeId" class="form-label"></label>
            <select asp-for="ShowtimeId" asp-items="ViewBag.Showtimes" class="form-select">
                <option value="">-- Chọn suất chiếu --</option>
            </select>
            <span asp-validation-for="ShowtimeId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SeatNumber" class="form-label"></label>
            <input asp-for="SeatNumber" class="form-control" />
            <span asp-validation-for="SeatNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="UserId" class="form-label"></label>
            <select asp-for="UserId" asp-items="ViewBag.Users" class="form-select">
                <option value="">-- Chọn người dùng --</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
